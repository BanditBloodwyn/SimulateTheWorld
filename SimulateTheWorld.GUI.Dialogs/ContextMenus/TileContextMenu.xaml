<Window x:Class="SimulateTheWorld.GUI.Dialogs.ContextMenus.TileContextMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimulateTheWorld.GUI.Dialogs.ContextMenus"
             mc:Ignorable="d" 
             d:DesignHeight="190" d:DesignWidth="190" MaxHeight="190" MaxWidth="190"
             Topmost="True" WindowStyle="None" ShowInTaskbar="False" ResizeMode="NoResize">
    <Window.DataContext>
        <local:TileContextMenuViewModel/>
    </Window.DataContext>

    <StackPanel>
        <Label Margin="0,20,0,0" Height="25" 
               Content="{Binding Description}"/>
        <Separator/>
        <MenuItem Header="Anpinnen" Click="MenuItem_OnClick"/>
        <Separator/>
        <MenuItem Header="test"/>
        <MenuItem Header="test"/>
    </StackPanel>
</Window>
