<UserControl x:Class="SimulateTheWorld.GUI.Controls.Controls.MainWindow.STWMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sidePanel="clr-namespace:SimulateTheWorld.GUI.Controls.Controls.SidePanel"
             xmlns:renderView="clr-namespace:SimulateTheWorld.GUI.Controls.Controls.RenderView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/> <!-- Side Panel -->
            <ColumnDefinition Width="*"/> <!-- Render View -->
        </Grid.ColumnDefinitions>

        <GridSplitter Grid.Column="0" ShowsPreview="True" VerticalAlignment="Stretch" HorizontalAlignment="Right" Width="4"/>

        <sidePanel:STWSidePanel Grid.Column="0"/>
        <renderView:RenderView Grid.Column="1"/>
    </Grid>
</UserControl>
