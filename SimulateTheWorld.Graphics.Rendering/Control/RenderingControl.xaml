<UserControl x:Class="SimulateTheWorld.Graphics.Rendering.Control.RenderingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
             xmlns:control="clr-namespace:SimulateTheWorld.Graphics.Rendering.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <control:RenderingControlViewModel/>
    </UserControl.DataContext>

    <glWpfControl:GLWpfControl
        x:Name="GlControl"
        Render="GlControl_OnRender"
        Unloaded="GlControl_OnUnloaded"
        SizeChanged="GlControl_OnSizeChanged"
        MouseWheel="GlControl_OnMouseWheel"
        MouseMove="GlControl_OnMouseMove" 
        MouseUp="GlControl_MouseUp"/>

</UserControl>
