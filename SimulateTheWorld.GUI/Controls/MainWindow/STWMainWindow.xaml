<UserControl x:Class="SimulateTheWorld.GUI.Controls.MainWindow.STWMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sidePanel="clr-namespace:SimulateTheWorld.GUI.Controls.SidePanel"
             xmlns:render="clr-namespace:SimulateTheWorld.GUI.Controls.RenderView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/> <!-- Side Panel -->
            <ColumnDefinition Width="*"/> <!-- Render View -->
        </Grid.ColumnDefinitions>

        <sidePanel:STWSidePanel Grid.Column="0"/>
        <render:RenderView Grid.Column="1"/>
    </Grid>
</UserControl>
