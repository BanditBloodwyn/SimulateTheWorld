<UserControl x:Class="SimulateTheWorld.GUI.Controls.RenderView.RenderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:render="clr-namespace:SimulateTheWorld.Rendering.Control;assembly=SimulateTheWorld.Rendering"
             xmlns:toolBar="clr-namespace:SimulateTheWorld.GUI.Controls.RenderView.ToolBar"
             xmlns:renderView="clr-namespace:SimulateTheWorld.ViewModels.RenderView;assembly=SimulateTheWorld.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <renderView:RenderViewViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <toolBar:MainToolbarControl Grid.Row="0"></toolBar:MainToolbarControl>
        <render:RenderingControl Grid.Row="1"></render:RenderingControl>
    </Grid>
</UserControl>
