<UserControl x:Class="SimulateTheWorld.GUI.Controls.Controls.Core.CoreControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toolbar="clr-namespace:SimulateTheWorld.GUI.Controls.Controls.Toolbar"
             xmlns:mainWindow="clr-namespace:SimulateTheWorld.GUI.Controls.Controls.MainWindow"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/> <!-- Toolbar -->
            <RowDefinition Height="*"/> <!-- Main Window -->
        </Grid.RowDefinitions>

        <toolbar:STWToolbar></toolbar:STWToolbar>
        <mainWindow:STWMainWindow Grid.Row="1"></mainWindow:STWMainWindow>
    </Grid>
</UserControl>
